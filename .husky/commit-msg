#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

# Validate commit message format (conventional commits)
commit_msg_file=$1
commit_msg=$(cat "$commit_msg_file")

# Allow merge commits and revert commits
if echo "$commit_msg" | grep -qE "^(Merge|Revert)"; then
    exit 0
fi

# Check for conventional commit format
# Format: type(optional scope): description
# Types: feat, fix, docs, style, refactor, test, chore, perf, ci, build
if ! echo "$commit_msg" | grep -qE "^(feat|fix|docs|style|refactor|test|chore|perf|ci|build)(\(.+\))?: .{1,}"; then
    echo "‚ùå Invalid commit message format!"
    echo ""
    echo "Commit message must follow conventional commits format:"
    echo "  type(scope): description"
    echo ""
    echo "Types:"
    echo "  feat:     A new feature"
    echo "  fix:      A bug fix"
    echo "  docs:     Documentation changes"
    echo "  style:    Code style changes (formatting, etc.)"
    echo "  refactor: Code refactoring"
    echo "  test:     Adding or updating tests"
    echo "  chore:    Maintenance tasks"
    echo "  perf:     Performance improvements"
    echo "  ci:       CI/CD changes"
    echo "  build:    Build system changes"
    echo ""
    echo "Examples:"
    echo "  feat(button): add new size variant"
    echo "  fix: resolve bottom sheet modal crash"
    echo "  docs: update storybook setup guide"
    echo ""
    exit 1
fi
